/*
 * Test configuration - single key matrix
 * Testing all possible combinations
 */

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <6>;
        rows = <4>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "col2row";
        debounce-press-ms = <1>;
        debounce-release-ms = <1>;
        
        // Test all pins - using XIAO pin labels
        row-gpios
            = <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // D3 = P0.28
            , <&xiao_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // D4 = P0.29
            , <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // D5 = P0.04
            , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // D6 = P0.05
            ;
        
        col-gpios
            = <&xiao_d 10 GPIO_ACTIVE_HIGH>  // D10 = P1.15
            , <&xiao_d 9 GPIO_ACTIVE_HIGH>   // D9 = P1.14
            , <&xiao_d 8 GPIO_ACTIVE_HIGH>   // D8 = P1.13
            , <&xiao_d 7 GPIO_ACTIVE_HIGH>   // D7 = P1.12
            , <&xiao_d 0 GPIO_ACTIVE_HIGH>   // D0 = P0.02
            , <&xiao_d 1 GPIO_ACTIVE_HIGH>   // D1 = P0.03
            ;
    };
};

&xiao_i2c {
    status = "disabled";
};
